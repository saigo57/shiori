<h1 class="page-title">パスワード変更</h1>

<div class="c-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="c-form__field">
      <%= f.label :password, "新しいパスワード" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "c-input c-form__field-input" %>
    </div>

    <div class="c-form__field">
      <%= f.label :password_confirmation, "新しいパスワード(再入力)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "c-input c-form__field-input" %>
    </div>

    <div class="actions">
      <%= f.submit "パスワード変更", class: "c-button c-button--confirm" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
